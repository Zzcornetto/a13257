<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.egco428.a13257.SignupActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/Main_Color"
        android:text="Username"
        android:background="@drawable/round_background"
        android:gravity="center" />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/signUpUsr"
        android:background="@drawable/round"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/Main_Color"
        android:text="Password"
        android:background="@drawable/round_background"
        android:gravity="center"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/signUpPass"
        android:background="@drawable/round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:textSize="10sp"
            android:text="Latitude"
            android:gravity="center"
            android:textColor="@color/Main_Color"
            android:background="@drawable/round_background"
            android:id="@+id/signin"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:textColor="@color/Main_Color"
            android:gravity="center"
            android:background="@drawable/round_background"
            android:text="Longtitude"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:id="@+id/SignUpLat"
            android:inputType="numberDecimal"
            android:background="@drawable/round"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:id="@+id/SignUpLong"
            android:inputType="numberDecimal"
            android:background="@drawable/round"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="10sp"
        android:background="@drawable/round_background2"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:id="@+id/randomBtn"
        android:onClick="randomClick"
        android:text="Random by Checking"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="10sp"
        android:background="@drawable/round_background2"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:id="@+id/addRQST"
        android:onClick="addnewUser"
        android:text="Add New User"/>

</LinearLayout>
